@page "/"
@* 
<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.
 *@
<div class="container mt-4">
    <div class="jumbotron text-center">
        <h1>Star Wars Explorer</h1>
        <p class="lead">Explore the Star Wars universe using the SWAPI</p>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card dashboard-card" @onclick="NavigateToCharacters">
                <div class="card-body text-center">
                    <h3>Characters</h3>
                    <p>Explore characters from the Star Wars universe</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card dashboard-card" @onclick="NavigateToFilms">
                <div class="card-body text-center">
                    <h3>Films</h3>
                    <p>Browse Star Wars films and their details</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card dashboard-card" @onclick="NavigateToPlanets">
                <div class="card-body text-center">
                    <h3>Planets</h3>
                    <p>Discover planets from the Star Wars galaxy</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; }

    private void NavigateToCharacters()
    {
        NavigationManager.NavigateTo("/characters");
    }

    private void NavigateToFilms()
    {
        NavigationManager.NavigateTo("/films");
    }

    private void NavigateToPlanets()
    {
        NavigationManager.NavigateTo("/planets");
    }
}

<style>
    .dashboard-card {
        cursor: pointer;
        transition: transform 0.3s, box-shadow 0.3s;
        height: 100%;
    }

        .dashboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

    .jumbotron {
        background-color: #f8f9fa;
        padding: 2rem;
        margin-bottom: 2rem;
        border-radius: 0.3rem;
    }
</style>